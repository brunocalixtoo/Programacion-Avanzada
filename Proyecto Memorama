    private void BTN_JugarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        Inicializar();
        puntos = 0;
        LB_Puntos.setText(String.valueOf(puntos));
        AuxImg1 = 0;
        AuxImg2 = 0;
        AuxImg3 = 0;
        AuxImg4 = 0;
        AuxImg5 = 0;
        AuxImg6 = 0; 
        AuxImg7 = 0;
        AuxImg8 = 0;
        Checador = 0;
        ubicarCartas();
    }                                         
    
    public void Iguales(){
        if (A.equals(B)) {
            LB_Puntos.setText(Integer.toString(++puntos));
            Checador = 0;
            if (puntos == 4) {
                JOptionPane.showMessageDialog(this, "Â¡GANASTE!");
            }
        }else{
            new Thread() {
                @Override
                public void run() {
                    try {
                        Thread.sleep(400);
                        FuckGoBack();
                    } catch (InterruptedException ex) {
                    }
                }
            }.start();
        }
    }
    
    public void FuckGoBack(){
        if (Boton[0] == 1 || Boton[1] == 1) {
            AuxImg1 = 0;
            Checador = 0;
            IMG_1.setIcon(cartas[TotalCartas-1]);
        }
        if (Boton[0] == 2 || Boton[1] == 2) {
            AuxImg2 = 0;
            Checador = 0;
            IMG_2.setIcon(cartas[TotalCartas-1]);
        }
        if (Boton[0] == 3 || Boton[1] == 3) {
            AuxImg3 = 0;
            Checador = 0;
            IMG_3.setIcon(cartas[TotalCartas-1]);
        }
        if (Boton[0] == 4 || Boton[1] == 4) {
            AuxImg4 = 0;
            Checador = 0;
            IMG_4.setIcon(cartas[TotalCartas-1]);
        }
        if (Boton[0] == 5 || Boton[1] == 5) {
            AuxImg5 = 0;
            Checador = 0;
            IMG_5.setIcon(cartas[TotalCartas-1]);
        }
        if (Boton[0] == 6 || Boton[1] == 6) {
            AuxImg6 = 0;
            Checador = 0;
            IMG_6.setIcon(cartas[TotalCartas-1]);
        }
        if (Boton[0] == 7 || Boton[1] == 7) {
            AuxImg7 = 0;
            Checador = 0;
            IMG_7.setIcon(cartas[TotalCartas-1]);
        }
        if (Boton[0] == 8 || Boton[1] == 8) {
            AuxImg8 = 0;
            Checador = 0;
            IMG_8.setIcon(cartas[TotalCartas-1]);
        }
    }
    
    private void IMG_1ActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        IMG_1.setIcon(cartas[m_tablero[0]]);
        if (AuxImg1 != 2) {
            if (Checador == 0) {
                Boton[0] = 1;
                A = cartas[m_tablero[0]];
                Checador = 1;
                AuxImg1 = 2;
            }else{
                Boton[1] = 1;
                B = cartas[m_tablero[0]];
                AuxImg1 = 2;
                Iguales();
            }
        }
    }                                     

