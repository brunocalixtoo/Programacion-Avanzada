        cartas[3] = new ImageIcon("spiderman.jpg");
        
        cartas[4] = new ImageIcon("batman.jpg"); //Icono
        
        m_tablero = new int[(cartas.length-1)*2];
        
        //Inicializar Tablero
        Inicializar();
        ubicarCartas();
        
    }
    
    public void Inicializar(){
        puntos = 0;
        IMG_1.setIcon(cartas[TotalCartas-1]);
        IMG_2.setIcon(cartas[TotalCartas-1]);
        IMG_3.setIcon(cartas[TotalCartas-1]);
        
        IMG_4.setIcon(cartas[TotalCartas-1]);
        IMG_5.setIcon(cartas[TotalCartas-1]);
        IMG_6.setIcon(cartas[TotalCartas-1]);
        
        IMG_7.setIcon(cartas[TotalCartas-1]);
        IMG_8.setIcon(cartas[TotalCartas-1]);
        
    }
    
    public void ubicarCartas(){
        for (int i = 0; i < m_tablero.length; i++) {
            m_tablero[i] = -1;
        }
        int cont;
        Random rnd = new Random();
        int Index;
        for (int i = 0; i < cartas.length-1; i++) {
            cont=0;
            while (cont < 2) {
                Index = rnd.nextInt(m_tablero.length);
                if (m_tablero[Index] == -1) {
                    cont++;
                    m_tablero[Index] = i;
                }
            }
        }
    }
    
